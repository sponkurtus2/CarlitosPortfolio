---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets"; 

import g1 from '../images/gallery/g1.jpeg';
import g2 from '../images/gallery/g2.jpeg';
import g3 from '../images/gallery/g3.jpeg';
import g4 from '../images/gallery/g4.jpg';
import img5 from '../images/secondGallery/img5.jpg';
import img6 from '../images/secondGallery/g6.jpg';
import img7 from '../images/secondGallery/g7.jpg';
import img8 from '../images/secondGallery/g8.jpg';
import img9 from '../images/secondGallery/g9.jpg';

const images = [
  { src: g1, alt: "Primera foto de mi álbum" },
  { src: g2, alt: "Segunda foto de mi álbum" },
  { src: g3, alt: "Tercera foto de mi álbum" },
  { src: g4, alt: "Cuarta foto de mi álbum" },
  { src: img5, alt: "Quinta foto de mi álbum" },
  { src: img6, alt: "Sexta foto de mi álbum" },
  { src: img7, alt: "Séptima foto de mi álbum" },
  { src: img8, alt: "Octava foto de mi álbum" },
  { src: img9, alt: "Novena foto de mi álbum" },
]
---

<Layout title="Gallery">
    <main>
        <hgroup>
            <h1>My gallery ^^</h1>
            <p>
                These photos capture cherished moments and loved ones dear to me.
                <i class="fa-regular fa-heart"></i> 
            </p>
        </hgroup>

        <hr />

        <div class="collage">
            {images.map((img) => (
                <div class="item">
                    <Image src={img.src} alt={img.alt} loading="lazy" />
                </div>
            ))}
        </div>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 3rem;
        width: 950px;
        max-width: calc(100% - 2rem);
        line-height: 1.6;
        font-family: "Ubuntu Mono", monospace;
    }

    .collage {
        column-count: 3;
        column-gap: 1rem;
    }

    .item {
        margin-bottom: 1rem;
        overflow: hidden;
        border-radius: 8px;
        position: relative;
    }

    .item img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s ease;
    }

    .item:hover img {
        transform: scale(1.05);
    }

    @media only screen and (max-width: 767px) {
        .collage {
            column-count: 2;
        }
    }

    @media only screen and (max-width: 480px) {
        .collage {
            column-count: 1;
        }
    }
</style>
