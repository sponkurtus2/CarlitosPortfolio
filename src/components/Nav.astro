---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="header">
    <nav class="nav-container">
        <a href="/" class="logo-link">
            <span>Carlos</span>
            <span class="accent">Reyes</span>
        </a>

        <input type="checkbox" id="nav-toggle" class="nav-toggle" />
        <label for="nav-toggle" class="nav-toggle-label">
            <span></span>
        </label>

        <ul class="nav-links">
            <li>
                <a href="/" class={currentPath === "" ? "active" : ""}>Home</a>
            </li>
            <li>
                <a href="/work" class={currentPath === "work" ? "active" : ""}>Work</a>
            </li>
            <li>
                <a href="/articles" class={currentPath === "articles" ? "active" : ""}>Articles</a>
            </li>
            <li>
                <a href="/gallery" class={currentPath === "gallery" ? "active" : ""}>Gallery</a>
            </li>
        </ul>
    </nav>
</header>

<style>
    .header {
        position: sticky;
        top: 0;
        z-index: 1000;
        background: rgba(15, 17, 20, 0.8);
        backdrop-filter: blur(8px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        height: 45px;
        display: flex;
        align-items: center;
    }

    .nav-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
    }

    .logo-link {
        text-decoration: none;
        font-size: 0.95rem;
        color: #fff;
        letter-spacing: 0.5px;
    }

    .accent {
        color: #4a90e2;
        margin-left: 1px;
    }

    .nav-links {
        display: flex;
        gap: 1rem;
        margin: 0;
        padding: 0;
        list-style: none;
        height: 100%;
        align-items: center;
    }

    .nav-links a {
        text-decoration: none;
        color: #B3B9C5;
        font-size: 0.85rem;
        padding: 0.25rem 0.6rem;
        border-radius: 4px;
        transition: all 0.2s ease;
    }

    .nav-links a:hover {
        color: #fff;
        background: rgba(255, 255, 255, 0.05);
    }

    .nav-links a.active {
        color: #4a90e2;
        background: rgba(74, 144, 226, 0.1);
    }

    .nav-toggle {
        display: none;
    }

    .nav-toggle-label {
        display: none;
    }

    @media (max-width: 768px) {
        .nav-toggle-label {
            display: block;
            padding: 0.4rem;
            cursor: pointer;
        }

        .nav-toggle-label span,
        .nav-toggle-label span::before,
        .nav-toggle-label span::after {
            display: block;
            background: #fff;
            height: 2px;
            width: 1.2rem;
            border-radius: 2px;
            position: relative;
            transition: all 0.2s ease-in-out;
        }

        .nav-toggle-label span::before,
        .nav-toggle-label span::after {
            content: '';
            position: absolute;
        }

        .nav-toggle-label span::before {
            bottom: 5px;
        }

        .nav-toggle-label span::after {
            top: 5px;
        }

        .nav-links {
            position: absolute;
            top: 45px;
            left: 0;
            right: 0;
            background: rgba(15, 17, 20, 0.95);
            backdrop-filter: blur(8px);
            padding: 0.5rem;
            flex-direction: column;
            gap: 0.5rem;
            align-items: center;
            transform: translateY(-100%);
            opacity: 0;
            visibility: hidden;
            transition: all 0.2s ease-in-out;
            height: auto;
        }

        .nav-toggle:checked ~ .nav-links {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        .nav-toggle:checked ~ .nav-toggle-label span {
            background: transparent;
        }

        .nav-toggle:checked ~ .nav-toggle-label span::before {
            transform: rotate(45deg);
            bottom: 0;
        }

        .nav-toggle:checked ~ .nav-toggle-label span::after {
            transform: rotate(-45deg);
            top: 0;
        }
    }

    @media (max-width: 480px) {
        .nav-container {
            padding: 0 1rem;
        }

        .logo-link {
            font-size: 0.9rem;
        }

        .nav-links a {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
        }
    }
</style>
