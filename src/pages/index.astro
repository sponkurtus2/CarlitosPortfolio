<style>
	main {
		margin: auto;
		padding: 3rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		line-height: 1.6;
		font-family: "Ubuntu Mono", monospace;
	}

	.intro-section {
		text-align: center;
		margin-bottom: 2rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
		background: linear-gradient(45deg, #4a90e2, #63b3ed);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.subtitle {
		font-size: 1.2rem;
		color: #666;
	}

	.gradient-hr {
		border: none;
		height: 2px;
		background: linear-gradient(90deg, transparent, #4a90e2, transparent);
		margin: 2rem 0;
	}

	p {
		font-size: 17px;
		line-height: 1.8;
	}

	.content-section {
		background: rgba(255, 255, 255, 0.05);
		padding: 2rem;
		border-radius: 12px;
		margin: 2rem 0;
	}

	.featured-quote {
		font-size: 1.2rem;
		padding: 2rem;
		background: rgba(74, 144, 226, 0.1);
		border-left: 4px solid #4a90e2;
		border-radius: 0 12px 12px 0;
		margin: 2rem 0;
	}

	.social-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5rem;
		margin-top: 2rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 8px;
		transition: transform 0.2s, background 0.2s;
		text-decoration: none;
		color: inherit;
	}

	.social-link:hover {
		transform: translateY(-2px);
		background: rgba(74, 144, 226, 0.1);
	}

	img {
		border-radius: 10px;
		max-width: 100%;
		display: block;
		height: auto;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	.collage {
		column-count: 2;
		column-gap: 17px;
	}

	.item {
		display: inline-block;
		margin-bottom: 20px;
		width: 100%;
	}

	.item img {
		width: 100%;
		height: auto;
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	@media only screen and (max-width: 767px) {
		.social-grid {
			grid-template-columns: 1fr;
		}

		main {
			padding: 1.5rem;
			width: 100%;
		}

		h1 {
			font-size: 2rem;
		}

		.featured-quote {
			font-size: 1rem;
			padding: 1.5rem;
		}
	}
</style>
