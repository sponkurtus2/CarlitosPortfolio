<style>
	main {
		margin: auto;
		padding: 3rem;
		width: 700px;
		max-width: calc(100% - 2rem);
		line-height: 1.6;
		font-family: "Ubuntu Mono", monospace;
	}

	p {
		font-size: 17px;
	}

	img {
		border-radius: 10px;
		max-width: 100%;
		display: block;
		height: auto;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	.collage {
		column-count: 2;
		column-gap: 17px;
	}

	.item {
		display: inline-block;
		margin-bottom: 20px;
		width: 100%;
	}

	.item img {
		width: 100%;
		height: auto;
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	@media only screen and (max-width: 767px) and (min-width: 300px) {
		.collage {
			column-count: 2;
		}

		main {
			margin: auto;
			padding: 1rem;
			width: 400px;
			max-width: calc(100% - 2rem);
		}
	}
</style>
